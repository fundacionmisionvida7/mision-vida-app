{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "server.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/devotional",
      "dest": "server.js"
    },
    { "src": "/api/(.*)", "dest": "api/$1" },
    { "src": "/(.*)", "dest": "server.js" },
    {
      "src": "/send-daily",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js",
      "headers": {
        "Service-Worker-Allowed": "/"
      }
    }
  ]
}